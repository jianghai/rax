{
  "lerna": "2.0.0",
  "version": "1.0.0",
  "packages": [
    "packages/*",
    "universal/*",
    "examples/*"
  ],
  "commands": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "skipGit": true,
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md"
      ]
    }
  }
}
